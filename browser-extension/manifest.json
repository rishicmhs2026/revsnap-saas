{
  "manifest_version": 3,
  "name": "RevSnap - Smart Pricing Intelligence",
  "version": "1.0.0",
  "description": "Instantly check competitor prices and get AI-powered pricing recommendations while browsing.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.walmart.com/*",
    "https://*.target.com/*",
    "https://*.bestbuy.com/*",
    "https://*.ebay.com/*",
    "https://*.shopify.com/*",
    "https://revsnap.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.walmart.com/*", 
        "https://*.target.com/*",
        "https://*.bestbuy.com/*",
        "https://*.ebay.com/*",
        "https://*.shopify.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RevSnap Price Intelligence",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "quick-check": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Quick price check current product"
    }
  }
} 