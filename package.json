{
  "name": "revsnap-saas",
  "version": "1.0.0",
  "description": "B2B SaaS platform for revenue optimization and profit maximization",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:shopify": "jest --testNamePattern='Shopify'",
    "test:zapier": "jest --testNamePattern='Zapier'",
    "postbuild": "next-sitemap",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && npx tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@eslint/eslintrc": "^3.3.1",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "5.7.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.2",
    "firebase": "^12.3.0",
    "html2canvas": "^1.4.1",
    "ioredis": "^5.7.0",
    "js-cookie": "^3.0.5",
    "jspdf": "^3.0.3",
    "logrocket": "^10.1.0",
    "next": "15.0.4",
    "next-auth": "^4.24.5",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^14.9.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "jest": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "prisma": "5.7.1",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "keywords": [
    "saas",
    "pricing",
    "optimization",
    "b2b",
    "analytics",
    "profit",
    "business",
    "nextjs",
    "typescript"
  ],
  "author": "RevSnap Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/revsnap/saas-platform"
  },
  "homepage": "https://revsnap.com",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
